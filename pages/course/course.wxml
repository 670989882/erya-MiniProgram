<!--pages/course/course.wxml-->
<view class='container'>
 <view class="form">
 <input class='input' placeholder="请输入题目" bindinput="searchChanged"/>
 <view class='btn' bindtap='requestData'>搜索</view>
 </view>
  <scroll-view scroll-y class="courses" bindscrolltolower="loadMoreData">
    <view hidden='{{hidden}}' class='none'>没有找到哦</view>
    <view wx:for="{{courses}}" wx:key="id" class="item" data-id="{{item.id}}" bindtap='getDetail'>
    {{item.name}}
    </view>
    <view hidden='{{hideLoading}}'>正在加载</view>
  </scroll-view>
</view>
