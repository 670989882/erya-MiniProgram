/* pages/course/course.wxss */

.form {
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}

.input {
  height: 75%;
  width: 550rpx;
  margin-left: 18rpx;
  border-radius: 20rpx;
  background-color: white;
}

.btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 70%;
  margin-right: 14rpx;
  border-radius: 10rpx;
  background-color: #f7982a;
  color: white;
}

.courses {
 height: 88%;
}

.none {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #7a7a7a;
}

.item {
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  margin-left: 16rpx;
  margin-right: 16rpx; 
  margin-bottom: 20rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-right: 10rpx;
  border-radius: 40rpx;
  background-color: white;
}

/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar {
  width: 3px;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: #bebebe;
}

.ad{
  margin-bottom: 20rpx;
}

.tips{
  font-size: 20rpx;
  margin-bottom: 0rpx;
  padding-bottom: 0rpx;
  color: black;
}