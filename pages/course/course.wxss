/* pages/course/course.wxss */

.form {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}

.input {
  height: 78rpx;
  width: 550rpx;
  margin-left: 18rpx;
  background-color: rgb(246, 246, 246);
  border-radius: 20rpx;
}

.btn {
  text-align: center;
  line-height: 80rpx;
  width: 150rpx;
  margin-right: 14rpx;
  border-radius: 10rpx;
  background-color: #f7982a;
  color: white;
}

.courses {
 height: 90%;
}

.none {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #7a7a7a;
}

.item {
  margin-left: 16rpx;
  margin-right: 16rpx; 
  margin-bottom: 20rpx;
  font-size: 40rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  background-color: rgb(246, 246, 246);
}

/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar {
  width: 3px;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: #bebebe;
}