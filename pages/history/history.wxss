/* pages/history/history.wxss */

.view {
  padding: 8rpx;
  border-radius: 20rpx;
  background: #eee;
  margin-top: 0rpx;
  height: 93%;
  width: 95%;
}

.tips {
  width: 97%;
  display: flex;
  justify-content: space-between;
}

.list_name_box {
  background: #fff;
  border-bottom: 1px solid #efefef;
  display: flex;
  align-items: center;
  padding: 0 15rpx;
  font-size: 32rpx;
}

.list_item_name {
  flex: 1;
}

.icon_down {
  width: 35rpx;
  height: 35rpx;
  transition: transform 0.3s;
}

.list_item_name_box {
  background: #fff;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  display: flex;
  align-items: center;
  padding: 0 25rpx 0 50rpx;
}

.other {
  display: flex;
  padding: 0 25rpx 0 50rpx;
  align-items: center;
  font-size: 30rpx;
  color: #666;
}

.icon_down_rotate {
  transform: rotate(-90deg);
}

.unhistory {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}
