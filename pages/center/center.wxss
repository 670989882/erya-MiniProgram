/* pages/center/center.wxss */

.headerView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 330rpx;
  background-color: #f7982a;
}

.my-list {
  width: 100%;
}

.picture {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  height: 170rpx;
  width: 170rpx;
  border-radius: 50%;
  overflow: hidden;
}

.my-item {
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx;
  font-size: 32rpx;
  background: #fff url('../../icons/xiangyou1.png') no-repeat 98% 50% / auto 36rpx;
}

.my-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: -6rpx;
}