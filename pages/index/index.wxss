/**index.wxss**/

.form {
  margin-top: 18rpx;
  width: 95%;
}

.textarea {
  font-size: 34rpx;
  padding: 12rpx;
  margin-top: 18rpx;
  border-radius: 20rpx;
  background: white;
  width: 97%;
  height: 450rpx;
}

.btn {
  margin-top: 18rpx;
}

.notice {
  padding: 8rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
  margin-top: 18rpx;
  background: #ebebeb;
  width: 93%;
  color: rgb(4, 4, 39, 33);
}

.picture {
  border-radius: 20rpx;
  width: 95%;
  height: 120rpx;
}

.problem {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 60rpx;
}

.tips {
  font-size: 30rpx;
  color: rgb(141, 127, 127);
}

.others {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.otherItem {
  display: flex;
  align-items: center;
  flex-direction: row;
  font-size: 36rpx;
  color: rgb(88, 88, 88);
  font-weight: 400;
  /* font-family: "宋体" */
}

.mirc{
  background-color: #ebebeb;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  border-radius: 20px;
}